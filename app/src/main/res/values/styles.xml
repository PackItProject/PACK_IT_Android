<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- 로그인 초반 사각 버튼 -->
    <style name="SquareButton" parent="Widget.AppCompat.Button">
        <item name="android:radius">0dp</item>
        <item name="android:background">@color/grey</item>
    </style>

    <!-- 하단 둥근 사각 버튼 기본 설정 -->
    <style name="BottomRoundButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/btn_round</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- 하단 둥근 사각 버튼 기본 설정 -->
    <style name="GreyText" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/grey</item>
    </style>
</resources>