<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:paddingBottom="70dp">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/background_grey"
            android:orientation="vertical"
            android:padding="18dp">

            <TextView
                android:id="@+id/textMyPackit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:text="My packIt!"
                android:textSize="20sp"
                android:textStyle="bold" />

            <!-- 적립 정보를 보여주는 박스 -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@color/white">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="23dp"
                    android:layout_marginLeft="10dp"
                    android:text="이름"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/textViewName"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/textViewName" />

                <!-- 이름 -->
                <TextView
                    android:id="@+id/textViewName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" 님이 \n 지금까지 지구를 지킨 횟수"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/guideline"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <!-- 가이드라인 -->
                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guideline"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_end="141dp" />

                <!-- 주문 횟수 -->
                <TextView
                    android:id="@+id/textViewOrderCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="00회"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/guideline"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- 이미지 -->

            <!-- 스탬프 -->

            <ImageView
                android:id="@+id/imageViewStamp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-25dp"
                android:layout_marginBottom="-30dp"
                android:padding="0dp"
                android:scaleType="centerCrop"
                android:src="@drawable/mypackit_map" />

            <TextView
                android:id="@+id/textStampCard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                android:text="스탬프카드"
                android:textSize="20sp"
                android:textStyle="bold" />

            <GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:columnCount="5"
                android:rowCount="2"

                >

                <!-- 도장판 이미지 -->
                <ImageView
                    android:id="@+id/stampFrame"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_rowSpan="2"
                    android:layout_columnSpan="5"
                    android:scaleType="centerCrop"
                    android:src="@drawable/mypackit_stamp_pad" />

                <!-- 도장 1 -->
                <ImageView
                    android:id="@+id/stamp1"
                    android:layout_row="0"
                    android:layout_column="0"
                    android:layout_gravity="center"
                    android:layout_marginLeft="35dp"
                    android:layout_marginTop="15dp"
                    android:padding="5dp"
                    android:src="@drawable/mypack_stamp_no"

                    />

                <ImageView
                    android:id="@+id/stamp2"
                    android:layout_row="0"
                    android:layout_column="1"
                    android:layout_marginTop="15dp"
                    android:padding="5dp"
                    android:src="@drawable/mypack_stamp_no" />

                <ImageView
                    android:id="@+id/stamp3"
                    android:layout_row="0"
                    android:layout_column="2"
                    android:layout_marginTop="15dp"
                    android:padding="5dp"
                    android:src="@drawable/mypack_stamp_no" />

                <ImageView
                    android:id="@+id/stamp4"
                    android:layout_row="0"
                    android:layout_column="3"
                    android:layout_marginTop="15dp"
                    android:padding="5dp"
                    android:src="@drawable/mypack_stamp_no" />

                <ImageView
                    android:id="@+id/stamp5"
                    android:layout_row="0"
                    android:layout_column="4"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="35dp"
                    android:padding="5dp"
                    android:src="@drawable/mypack_stamp_no" />

                <ImageView
                    android:id="@+id/stamp6"
                    android:layout_row="1"
                    android:layout_column="0"
                    android:layout_marginLeft="35dp"
                    android:padding="5dp"
                    android:src="@drawable/mypack_stamp_no" />

                <ImageView
                    android:id="@+id/stamp7"

                    android:layout_row="1"
                    android:layout_column="1"
                    android:padding="5dp"
                    android:src="@drawable/mypack_stamp_no" />

                <ImageView
                    android:id="@+id/stamp8"
                    android:layout_row="1"
                    android:layout_column="2"
                    android:padding="5dp"
                    android:src="@drawable/mypack_stamp_no" />

                <ImageView
                    android:id="@+id/stamp9"
                    android:layout_row="1"
                    android:layout_column="3"
                    android:padding="5dp"
                    android:src="@drawable/mypack_stamp_no" />

                <ImageView
                    android:id="@+id/stamp10"
                    android:layout_row="1"
                    android:layout_column="4"
                    android:layout_marginRight="35dp"
                    android:padding="5dp"
                    android:src="@drawable/mypack_stamp_no" />

            </GridLayout>

            <TextView
                android:id="@+id/textPin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                android:text="뱃지"
                android:textSize="20sp"
                android:textStyle="bold" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/badgeRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                app:layoutManager="androidx.recyclerview.widget.GridLayoutManager" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</LinearLayout>