<!-- res/layout/activity_terms_and_conditions.xml -->

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center">

    <!-- 서비스 이름 -->
    <TextView
        android:id="@+id/textViewServiceName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:text="Pack it! 가입"
        android:textSize="20sp"
        android:textStyle="bold" />

    <!-- 서비스 가입, 이용 동의 텍스트 -->
    <TextView
        android:id="@+id/textViewTerms"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewServiceName"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="서비스 가입, 이용을 위해 동의해 주세요."
        android:textSize="16sp" />

    <!-- 동의 체크박스 -->
    <CheckBox
        android:id="@+id/checkboxAgree"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewTerms"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="서비스 이용 약관에 동의합니다." />


    <CheckBox
        android:id="@+id/checkboxAgree"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewTerms"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:text="서비스 이용 약관에 동의합니다." />

    <CheckBox
        android:id="@+id/checkboxAgree"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewTerms"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:text="서비스 이용 약관에 동의합니다." />

    <!-- 확인 버튼 -->
    <Button
        android:id="@+id/buttonConfirm"
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:layout_below="@id/checkboxAgree"
        android:layout_margin="16dp"
        android:text="확인"
        style="@style/SquareButton"/>

</LinearLayout>
