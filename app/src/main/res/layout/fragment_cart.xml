<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_grey">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <!-- 상단부 -->
    <ImageView
        android:id="@+id/cart_back_btn_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/img_back_grey"
        android:layout_marginTop="20dp"
        android:layout_marginStart="25dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/cart_store_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="가게이름"
        android:textSize="22sp"
        android:textColor="@color/dark_grey"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        android:layout_marginStart="5dp"
        app:layout_constraintTop_toBottomOf="@id/cart_back_btn_iv"
        app:layout_constraintStart_toStartOf="@id/cart_back_btn_iv" />

    <!-- 중간 부분 -->
    <!-- 담은 메뉴 리스트 -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cart_list_background_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cart_store_name_tv"
        app:layout_constraintBottom_toTopOf="@id/cart_pick_up_background_view"
        style="@style/RoundCardView">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/cart_list_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:listitem="@layout/item_cart_menu"/>
    </androidx.cardview.widget.CardView>

    <!-- 픽업 시간 -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cart_pick_up_background_view"
        android:layout_width="0dp"
        android:layout_height="126dp"
        android:background="@color/white_text"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cart_list_background_view">

        <LinearLayout
            android:id="@+id/cart_vertical_align_01"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_vertical">

            <!--  픽업할 시간 예약 -->
            <TextView
                android:id="@+id/cart_pick_up_time_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="픽업할 시간 예약"
                android:textStyle="bold"
                android:layout_marginTop="16dp"
                android:layout_marginStart="16dp"
                style="@style/GreyText"/>

            <RelativeLayout
                android:id="@+id/cart_horizontal_align_01"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <Button
                    android:id="@+id/cart_pick_up_am_pm_btn"
                    android:layout_width="60dp"
                    android:layout_height="48dp"
                    android:text="오후"
                    android:layout_toStartOf="@id/cart_pick_up_hour_btn"
                    android:layout_alignBottom="@id/cart_pick_up_hour_btn"
                    style="@style/BoldDrakGreyText" />

                <Button
                    android:layout_alignBottom="@id/cart_pick_up_hour_btn"
                    android:id="@+id/cart_pick_up_hour_btn"
                    android:layout_width="60dp"
                    android:layout_height="48dp"
                    android:text="12"
                    android:layout_marginBottom="30dp"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentBottom="true"
                    style="@style/BoldDrakGreyText" />

                <Button
                    android:id="@+id/cart_pick_up_minute_btn"
                    android:layout_width="60dp"
                    android:layout_height="48dp"
                    android:text="30"
                    android:layout_toEndOf="@id/cart_pick_up_hour_btn"
                    android:layout_alignBottom="@id/cart_pick_up_hour_btn"
                    style="@style/BoldDrakGreyText" />
            </RelativeLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- 최종 확정 (시간+가격 확인) -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cart_completed_background_view"
        android:layout_width="0dp"
        android:layout_height="116dp"
        android:background="@color/white_text"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="150dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cart_pick_up_background_view">

        <LinearLayout
            android:id="@+id/cart_vertical_align_02"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">

            <!-- 픽업 시간 -->
            <RelativeLayout
                android:id="@+id/cart_horizontal_align_02"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingHorizontal="16dp" >

                <TextView
                    android:id="@+id/cart_completed_pick_up_01_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="픽업 시간"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    style="@style/GreyText"/>

                <TextView
                    android:id="@+id/cart_completed_pick_up_time_02_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="오후 12:30"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    style="@style/BoldDrakGreyText"/>
            </RelativeLayout>

            <!-- 총 결제 금액 -->
            <RelativeLayout
                android:id="@+id/cart_horizontal_align_03"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingHorizontal="16dp" >

                <TextView
                    android:id="@+id/cart_completed_total_price_01_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="총 결제 금액"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    style="@style/GreyText"/>

                <TextView
                    android:id="@+id/cart_completed_total_price_02_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="13,000원"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    style="@style/BoldDrakGreyText"/>
            </RelativeLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
    <!-- 하단부 -->
    <ImageView
        android:id="@+id/cart_button_background_iv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/img_upper_shadow"
        android:scaleType="fitXY"
        android:elevation="2dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <Button
        android:id="@+id/cart_order_btn"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginHorizontal="30dp"
        android:text="주문하기"
        android:layout_marginBottom="18dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/cart_button_background_iv"
        style="@style/BottomRoundButton" />

</androidx.constraintlayout.widget.ConstraintLayout>