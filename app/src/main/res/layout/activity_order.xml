<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    
    <ImageView
        android:id="@+id/order_back_btn_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/grey_back"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginStart="25dp"/>

    <TextView
        android:id="@+id/order_store_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:text="가게 이름"
        android:textColor="@color/dark_grey"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/order_back_btn_iv"
        app:layout_constraintTop_toBottomOf="@id/order_back_btn_iv" />
    
    <TextView
        android:id="@+id/order_store_address_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="서울특별시 서대문구 52길 14 1층"
        android:textSize="16sp"
        android:textColor="@color/grey"
        app:layout_constraintTop_toBottomOf="@id/order_store_name_tv"
        app:layout_constraintStart_toStartOf="@id/order_store_name_tv"/>
    
    <TextView
        android:id="@+id/order_request_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="요청사항"
        android:textSize="16sp"
        android:textColor="@color/grey"
        app:layout_constraintTop_toBottomOf="@id/order_store_address_tv"
        app:layout_constraintStart_toStartOf="@id/order_store_name_tv"/>

    <EditText
        android:id="@+id/order_request_et"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:hint="ex. 덜 맵게 해주세요, 땅콩은 빼주세요"
        android:textSize="13sp"
        android:textColor="@color/dark_grey"
        android:background="@color/background_grey"
        app:layout_constraintTop_toBottomOf="@id/order_request_tv"
        app:layout_constraintStart_toStartOf="@id/order_store_name_tv"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="30dp"/>

    <TextView
        android:id="@+id/order_user_info_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="수령자"
        android:textSize="16sp"
        android:textColor="@color/grey"
        app:layout_constraintTop_toBottomOf="@id/order_request_et"
        app:layout_constraintStart_toStartOf="@id/order_store_name_tv"/>

    <TextView
        android:id="@+id/order_user_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="강희정"
        android:textSize="18sp"
        android:textColor="@color/dark_grey"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@id/order_user_info_tv"
        app:layout_constraintBottom_toBottomOf="@id/order_user_info_tv"
        app:layout_constraintEnd_toEndOf="@id/order_request_et"/>

    <TextView
        android:id="@+id/order_user_tel_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="010-1234-5678"
        android:textSize="18sp"
        android:textColor="@color/dark_grey"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/order_user_name_tv"
        app:layout_constraintEnd_toEndOf="@id/order_user_name_tv"/>
    
    <View
        android:id="@+id/order_line_01_view"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/grey"
        app:layout_constraintTop_toBottomOf="@id/order_user_tel_tv"
        app:layout_constraintStart_toStartOf="@id/order_request_et"
        app:layout_constraintEnd_toEndOf="@id/order_request_et" />

    <TextView
        android:id="@+id/order_payment_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="결제 수단"
        android:textSize="18sp"
        android:textColor="@color/dark_grey"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/order_line_01_view"
        app:layout_constraintTop_toBottomOf="@id/order_line_01_view"/>

    <ImageView
        android:id="@+id/order_card_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/circle_off"
        android:layout_marginStart="20dp"
        app:layout_constraintStart_toStartOf="@id/order_line_01_view"
        app:layout_constraintTop_toBottomOf="@id/order_payment_tv"/>

    <TextView
        android:id="@+id/order_card_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="신용/체크카드"
        android:textSize="16sp"
        android:textColor="@color/dark_grey"
        android:layout_marginStart="20dp"
        app:layout_constraintStart_toEndOf="@id/order_card_iv"
        app:layout_constraintTop_toTopOf="@id/order_card_iv"
        app:layout_constraintBottom_toBottomOf="@id/order_card_iv" />

    <ImageView
        android:id="@+id/order_mobile_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/circle_off"
        android:layout_marginStart="20dp"
        app:layout_constraintStart_toStartOf="@id/order_line_01_view"
        app:layout_constraintTop_toBottomOf="@id/order_card_iv"/>

    <TextView
        android:id="@+id/order_mobile_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="휴대폰 결제"
        android:textSize="16sp"
        android:textColor="@color/dark_grey"
        android:layout_marginStart="20dp"
        app:layout_constraintStart_toEndOf="@id/order_mobile_iv"
        app:layout_constraintTop_toTopOf="@id/order_mobile_iv"
        app:layout_constraintBottom_toBottomOf="@id/order_mobile_iv" />

    <ImageView
        android:id="@+id/order_kakao_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/circle_off"
        android:layout_marginStart="20dp"
        app:layout_constraintStart_toStartOf="@id/order_line_01_view"
        app:layout_constraintTop_toBottomOf="@id/order_mobile_iv"/>

    <TextView
        android:id="@+id/order_kakao_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="카카오페이"
        android:textSize="16sp"
        android:textColor="@color/dark_grey"
        android:layout_marginStart="20dp"
        app:layout_constraintStart_toEndOf="@id/order_kakao_iv"
        app:layout_constraintTop_toTopOf="@id/order_kakao_iv"
        app:layout_constraintBottom_toBottomOf="@id/order_kakao_iv" />

    <ImageView
        android:id="@+id/order_naver_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/circle_off"
        android:layout_marginStart="20dp"
        app:layout_constraintStart_toStartOf="@id/order_line_01_view"
        app:layout_constraintTop_toBottomOf="@id/order_kakao_iv"/>

    <TextView
        android:id="@+id/order_naver_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="네이버페이"
        android:textSize="16sp"
        android:textColor="@color/dark_grey"
        android:layout_marginStart="20dp"
        app:layout_constraintStart_toEndOf="@id/order_naver_iv"
        app:layout_constraintTop_toTopOf="@id/order_naver_iv"
        app:layout_constraintBottom_toBottomOf="@id/order_naver_iv" />

    <View
        android:id="@+id/order_line_02_view"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/grey"
        app:layout_constraintTop_toBottomOf="@id/order_naver_tv"
        app:layout_constraintStart_toStartOf="@id/order_request_et"
        app:layout_constraintEnd_toEndOf="@id/order_request_et" />

    <TextView
        android:id="@+id/order_coupon_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="쿠폰/할인"
        android:textSize="18sp"
        android:textColor="@color/dark_grey"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/order_line_02_view"
        app:layout_constraintTop_toBottomOf="@id/order_line_02_view"/>

    <EditText
        android:id="@+id/order_coupon_et"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:hint="쿠폰 미사용"
        android:textSize="13sp"
        android:textColor="@color/dark_grey"
        android:background="@color/background_grey"
        app:layout_constraintTop_toBottomOf="@id/order_coupon_tv"
        app:layout_constraintStart_toStartOf="@id/order_coupon_tv"/>

    <View
        android:id="@+id/order_line_03_view"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/grey"
        app:layout_constraintTop_toBottomOf="@id/order_coupon_et"
        app:layout_constraintStart_toStartOf="@id/order_request_et"
        app:layout_constraintEnd_toEndOf="@id/order_request_et" />

    <TextView
        android:id="@+id/order_pickUp_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="픽업 시간"
        android:textSize="16sp"
        android:textColor="@color/grey"
        app:layout_constraintTop_toBottomOf="@id/order_line_03_view"
        app:layout_constraintStart_toStartOf="@id/order_line_03_view"/>

    <TextView
        android:id="@+id/order_pickUp_time_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="오후 12:30"
        android:textSize="18sp"
        android:textColor="@color/dark_grey"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@id/order_pickUp_tv"
        app:layout_constraintBottom_toBottomOf="@id/order_pickUp_tv"
        app:layout_constraintEnd_toEndOf="@id/order_line_03_view"/>

    <TextView
        android:id="@+id/order_totalPrice_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="총 결제 금액"
        android:textSize="16sp"
        android:textColor="@color/grey"
        app:layout_constraintTop_toBottomOf="@id/order_pickUp_tv"
        app:layout_constraintStart_toStartOf="@id/order_pickUp_tv"/>

    <TextView
        android:id="@+id/order_totalPrice_price_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="13,000원"
        android:textSize="18sp"
        android:textColor="@color/dark_grey"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@id/order_totalPrice_tv"
        app:layout_constraintBottom_toBottomOf="@id/order_totalPrice_tv"
        app:layout_constraintEnd_toEndOf="@id/order_line_03_view"/>

    <View
        android:id="@+id/order_line_04_view"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/grey"
        app:layout_constraintTop_toBottomOf="@id/order_totalPrice_tv"
        app:layout_constraintStart_toStartOf="@id/order_request_et"
        app:layout_constraintEnd_toEndOf="@id/order_request_et" />

    <TextView
        android:id="@+id/order_caution_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="주의사항"
        android:textSize="14sp"
        android:textColor="@color/grey"
        app:layout_constraintTop_toBottomOf="@id/order_line_04_view"
        app:layout_constraintStart_toStartOf="@id/order_line_04_view"/>

    <TextView
        android:id="@+id/order_caution_number_01_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1. "
        android:textSize="14sp"
        android:textColor="@color/grey"
        app:layout_constraintTop_toBottomOf="@id/order_caution_title_tv"
        app:layout_constraintStart_toStartOf="@id/order_line_04_view"/>

    <TextView
        android:id="@+id/order_caution_content_01_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1. 반드시 픽업 시간을 지켜 방문하시길 바랍니다."
        android:textSize="14sp"
        android:textColor="@color/grey"
        app:layout_constraintTop_toTopOf="@id/order_caution_number_01_tv"
        app:layout_constraintBottom_toBottomOf="@id/order_caution_number_01_tv"
        app:layout_constraintStart_toEndOf="@id/order_caution_number_01_tv"/>

    <TextView
        android:id="@+id/order_caution_number_02_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2. "
        android:textSize="14sp"
        android:textColor="@color/grey"
        app:layout_constraintTop_toBottomOf="@id/order_caution_number_01_tv"
        app:layout_constraintStart_toStartOf="@id/order_caution_number_01_tv"
        app:layout_constraintEnd_toEndOf="@id/order_caution_number_01_tv"/>

    <TextView
        android:id="@+id/order_caution_content_02_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="2. 고객님의 주문에 따라 개별적으로 생산 또는 조리된 상품이 단순 변심에 따라 청약철회될 경우, 업주에게 회복할 수 없는 손해가 발생하므로 단순 변심에 의한 청약철회는 할 수 없습니다."
        android:textSize="14sp"
        android:textColor="@color/grey"
        app:layout_constraintStart_toEndOf="@id/order_caution_number_02_tv"
        app:layout_constraintTop_toTopOf="@id/order_caution_number_02_tv"
        app:layout_constraintEnd_toEndOf="@id/order_line_04_view" />

    <TextView
        android:id="@+id/order_total_check_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="주문정보, 주의사항 모두 확인하였습니다."
        android:textSize="16sp"
        android:textColor="@color/dark_grey"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/order_caution_content_02_tv"
        app:layout_constraintStart_toStartOf="@id/order_line_04_view" />
    
    <ImageView
        android:id="@+id/order_check_btn_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/square_off"
        app:layout_constraintEnd_toEndOf="@id/order_line_04_view"
        app:layout_constraintTop_toTopOf="@id/order_total_check_tv"
        app:layout_constraintBottom_toBottomOf="@id/order_total_check_tv" />

    <Button
        android:id="@+id/order_pay_btn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/order_completed_btn_detailed"
        android:text="결제하기"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/order_line_04_view"
        app:layout_constraintEnd_toEndOf="@id/order_line_04_view"/>


</androidx.constraintlayout.widget.ConstraintLayout>