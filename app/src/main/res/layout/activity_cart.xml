<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <View
        android:id="@+id/cart_background_color_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background_grey" />

    <ImageView
        android:id="@+id/cart_back_btn_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/grey_back"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginStart="25dp"/>

    <TextView
        android:id="@+id/cart_store_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="가게이름"
        android:textSize="22sp"
        android:textColor="@color/dark_grey"
        android:textStyle="bold"
        android:layout_marginStart="5dp"
        app:layout_constraintTop_toBottomOf="@id/cart_back_btn_iv"
        app:layout_constraintStart_toStartOf="@id/cart_back_btn_iv" />

    <View
        android:id="@+id/cart_menu_background_view"
        android:layout_width="0dp"
        android:layout_height="180dp"
        android:background="@color/white_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="16dp"
        app:layout_constraintTop_toBottomOf="@id/cart_store_name_tv"/>
    <ImageView
        android:id="@+id/cart_menu_closed_btn_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/closed"
        app:layout_constraintTop_toTopOf="@id/cart_menu_background_view"
        app:layout_constraintEnd_toEndOf="@id/cart_menu_background_view"/>

    <ImageView
        android:id="@+id/cart_menu_image_iv"
        android:layout_width="96dp"
        android:layout_height="80dp"
        android:background="@color/grey"
        app:layout_constraintTop_toTopOf="@id/cart_menu_background_view"
        app:layout_constraintStart_toStartOf="@id/cart_menu_background_view"
        android:layout_marginTop="13dp"
        android:layout_marginStart="14dp" />

    <TextView
        android:id="@+id/cart_menu_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="메인메뉴 1"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="@id/cart_menu_image_iv"
        app:layout_constraintStart_toEndOf="@id/cart_menu_image_iv"/>

    <TextView
        android:id="@+id/cart_menu_price_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="13,000원"
        android:textStyle="bold"
        android:textSize="14sp"
        android:textColor="@color/dark_grey"
        app:layout_constraintTop_toBottomOf="@id/cart_menu_name_tv"
        app:layout_constraintStart_toStartOf="@id/cart_menu_name_tv" />

    <Button
        android:id="@+id/cart_menu_minus_btn"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:text="-"
        android:textSize="16sp"
        android:textColor="@color/dark_grey"
        app:layout_constraintEnd_toStartOf="@id/cart_menu_count_tv"
        app:layout_constraintBottom_toBottomOf="@id/cart_menu_background_view" />
    <TextView
        android:id="@+id/cart_menu_count_tv"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:text="1"
        android:textSize="16sp"
        android:gravity="center_vertical"
        android:textColor="@color/dark_grey"
        app:layout_constraintEnd_toStartOf="@id/cart_menu_plus_btn"
        app:layout_constraintTop_toTopOf="@id/cart_menu_plus_btn"
        app:layout_constraintBottom_toBottomOf="@id/cart_menu_plus_btn"

    <Button
        android:id="@+id/cart_menu_plus_btn"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:text="+"
        android:textSize="16sp"
        android:textColor="@color/dark_grey"
        app:layout_constraintEnd_toEndOf="@id/cart_menu_background_view"
        app:layout_constraintBottom_toBottomOf="@id/cart_menu_background_view" />

</androidx.constraintlayout.widget.ConstraintLayout>