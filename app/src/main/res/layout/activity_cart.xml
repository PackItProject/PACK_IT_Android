<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_grey">

    <ImageView
        android:id="@+id/cart_back_btn_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/img_back_grey"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginStart="25dp"/>

    <TextView
        android:id="@+id/cart_store_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="가게이름"
        android:textSize="22sp"
        android:textColor="@color/dark_grey"
        android:textStyle="bold"
        android:layout_marginStart="5dp"
        app:layout_constraintTop_toBottomOf="@id/cart_back_btn_iv"
        app:layout_constraintStart_toStartOf="@id/cart_back_btn_iv" />

    <View
        android:id="@+id/cart_menu_background_view"
        android:layout_width="0dp"
        android:layout_height="176dp"
        android:background="@color/white_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="16dp"
        app:layout_constraintTop_toBottomOf="@id/cart_store_name_tv"/>

    <ImageView
        android:id="@+id/cart_menu_closed_btn_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/img_closed"
        app:layout_constraintTop_toTopOf="@id/cart_menu_background_view"
        app:layout_constraintEnd_toEndOf="@id/cart_menu_background_view"/>

    <ImageView
        android:id="@+id/cart_menu_image_iv"
        android:layout_width="96dp"
        android:layout_height="80dp"
        android:background="@color/grey"
        app:layout_constraintTop_toTopOf="@id/cart_menu_background_view"
        app:layout_constraintStart_toStartOf="@id/cart_menu_background_view"
        android:layout_marginTop="13dp"
        android:layout_marginStart="14dp" />

    <TextView
        android:id="@+id/cart_menu_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="메인메뉴 1"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="@id/cart_menu_image_iv"
        app:layout_constraintStart_toEndOf="@id/cart_menu_image_iv"/>

    <TextView
        android:id="@+id/cart_menu_price_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="13,000원"
        android:textStyle="bold"
        android:textSize="14sp"
        android:textColor="@color/dark_grey"
        app:layout_constraintTop_toBottomOf="@id/cart_menu_name_tv"
        app:layout_constraintStart_toStartOf="@id/cart_menu_name_tv" />

    <Button
        android:id="@+id/cart_menu_minus_btn"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:text="-"
        android:textSize="16sp"
        android:textColor="@color/dark_grey"
        app:layout_constraintEnd_toStartOf="@id/cart_menu_count_tv"
        app:layout_constraintBottom_toBottomOf="@id/cart_menu_background_view" />

    <TextView
        android:id="@+id/cart_menu_count_tv"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:text="1"
        android:textSize="16sp"
        android:gravity="center"
        android:textColor="@color/dark_grey"
        app:layout_constraintEnd_toStartOf="@id/cart_menu_plus_btn"
        app:layout_constraintTop_toTopOf="@id/cart_menu_plus_btn"
        app:layout_constraintBottom_toBottomOf="@id/cart_menu_plus_btn" />

    <Button
        android:id="@+id/cart_menu_plus_btn"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:text="+"
        android:textSize="16sp"
        android:textColor="@color/dark_grey"
        app:layout_constraintEnd_toEndOf="@id/cart_menu_background_view"
        app:layout_constraintBottom_toBottomOf="@id/cart_menu_background_view" />

    <View
        android:id="@+id/cart_pick_up_background_view"
        android:layout_width="0dp"
        android:layout_height="126dp"
        android:background="@color/white_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/cart_menu_background_view"/>

    <TextView
        android:id="@+id/cart_pick_up_reserved_time_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="픽업할 시간 예약"
        android:textColor="@color/grey"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@id/cart_pick_up_background_view"
        app:layout_constraintStart_toStartOf="@id/cart_pick_up_background_view" />
    
    <Button
        android:id="@+id/cart_pick_up_meridiem_btn"
        android:layout_width="60dp"
        android:layout_height="44dp"
        android:text="오후"
        android:textColor="@color/dark_grey"
        android:textStyle="bold"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/cart_pick_up_reserved_time_tv"
        app:layout_constraintBottom_toBottomOf="@id/cart_pick_up_background_view"
        app:layout_constraintStart_toStartOf="@id/cart_pick_up_background_view"
        app:layout_constraintEnd_toStartOf="@id/cart_pick_up_minute_btn"/>

    <Button
        android:id="@+id/cart_pick_up_hour_btn"
        android:layout_width="60dp"
        android:layout_height="44dp"
        android:text="12"
        android:textColor="@color/dark_grey"
        android:textStyle="bold"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@id/cart_pick_up_background_view"
        app:layout_constraintEnd_toEndOf="@id/cart_pick_up_background_view"
        app:layout_constraintTop_toBottomOf="@id/cart_pick_up_reserved_time_tv"
        app:layout_constraintBottom_toBottomOf="@id/cart_pick_up_background_view" />

    <Button
        android:id="@+id/cart_pick_up_minute_btn"
        android:layout_width="60dp"
        android:layout_height="44dp"
        android:text="30"
        android:textColor="@color/dark_grey"
        android:textStyle="bold"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/cart_pick_up_reserved_time_tv"
        app:layout_constraintBottom_toBottomOf="@id/cart_pick_up_background_view"
        app:layout_constraintEnd_toEndOf="@id/cart_pick_up_background_view"
        app:layout_constraintStart_toEndOf="@id/cart_pick_up_meridiem_btn" />

    <View
        android:id="@+id/cart_completed_background_view"
        android:layout_width="0dp"
        android:layout_height="116dp"
        android:background="@color/white_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/cart_pick_up_background_view"/>

    <TextView
        android:id="@+id/cart_completed_pick_up_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="픽업 시간"
        android:textColor="@color/grey"
        android:textSize="16sp"
        app:layout_constraintTop_toTopOf="@id/cart_completed_background_view"
        app:layout_constraintBottom_toTopOf="@id/cart_completed_total_tv"
        app:layout_constraintStart_toStartOf="@id/cart_completed_background_view" />

    <TextView
        android:id="@+id/cart_completed_total_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="총 결제 금액"
        android:textColor="@color/grey"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/cart_completed_pick_up_tv"
        app:layout_constraintBottom_toBottomOf="@id/cart_completed_background_view"
        app:layout_constraintStart_toStartOf="@id/cart_completed_background_view" />

    <TextView
        android:id="@+id/cart_completed_pick_up_time_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="오후 12:30"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/dark_grey"
        app:layout_constraintEnd_toEndOf="@id/cart_completed_background_view"
        app:layout_constraintTop_toTopOf="@id/cart_completed_pick_up_tv"
        app:layout_constraintBottom_toBottomOf="@id/cart_completed_pick_up_tv"/>

    <TextView
        android:id="@+id/cart_completed_total_price_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="13,000원"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/dark_grey"
        app:layout_constraintEnd_toEndOf="@id/cart_completed_background_view"
        app:layout_constraintTop_toTopOf="@id/cart_completed_total_tv"
        app:layout_constraintBottom_toBottomOf="@id/cart_completed_total_tv"/>

    <View
        android:id="@+id/cart_order_button_background_view"
        android:layout_width="match_parent"
        android:layout_height="97dp"
        android:background="@color/white_text"
        app:layout_constraintBottom_toBottomOf="parent" />

    <Button
        android:id="@+id/cart_order_btn"
        android:layout_width="0dp"
        android:layout_height="65dp"
        android:background="@drawable/btn_detailed"
        android:text="주문하기"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintTop_toTopOf="@id/cart_order_button_background_view"
        app:layout_constraintBottom_toBottomOf="@id/cart_order_button_background_view"
        app:layout_constraintStart_toStartOf="@id/cart_order_button_background_view"
        app:layout_constraintEnd_toEndOf="@id/cart_order_button_background_view"
        android:layout_marginHorizontal="18dp" />
</androidx.constraintlayout.widget.ConstraintLayout>