<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingRight="16dp"
    android:paddingVertical="14dp"
    android:background="@drawable/item_border_drawble">

    <androidx.cardview.widget.CardView
        android:id="@+id/item_main_img_cardView"
        android:layout_width="120dp"
        android:layout_height="130dp"
        app:cardCornerRadius="7dp"
        app:cardElevation="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <ImageView
            android:id="@+id/item_main_img_iv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            android:src="#767676"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/item_main_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="메인 메뉴"
        android:textSize="22sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginLeft="22dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/item_main_price_tv"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/item_main_price_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="13,000원"
        android:textSize="17sp"
        android:textColor="@color/black"
        android:layout_marginLeft="22dp"
        android:layout_marginTop="14dp"
        app:layout_constraintTop_toBottomOf="@+id/item_main_title_tv"
        app:layout_constraintBottom_toTopOf="@id/item_main_size_tv"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/item_main_size_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="권장용량/크기"
        android:textSize="17sp"
        android:textColor="#363636"
        android:layout_marginLeft="22dp"
        android:layout_marginTop="36dp"
        android:layout_marginBottom="1dp"

        app:layout_constraintTop_toBottomOf="@+id/item_main_price_tv"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>