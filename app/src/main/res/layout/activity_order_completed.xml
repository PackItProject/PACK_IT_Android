<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <View
        android:id="@+id/order_completed_background_color_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white_text" />

    <TextView
        android:id="@+id/order_completed_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="26sp"
        android:text="주문 완료!"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/order_completed_closed_btn_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/closed"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="@id/order_completed_line_01_view" />


    <View
        android:id="@+id/order_completed_line_01_view"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/grey"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/order_completed_title_tv" />

    <TextView
        android:id="@+id/order_completed_store_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        android:text="가게이름"
        android:textColor="@color/dark_grey"
        android:textStyle="bold"
        android:layout_marginStart="30dp"
        app:layout_constraintTop_toBottomOf="@id/order_completed_line_01_view"
        app:layout_constraintStart_toStartOf="@id/order_completed_line_01_view" />

    <TextView
        android:id="@+id/order_completed_store_address_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="서울특별시 서대문구 52길 14 1층"
        android:textSize="16sp"
        android:textColor="@color/grey"
        app:layout_constraintTop_toBottomOf="@id/order_completed_store_name_tv"
        app:layout_constraintStart_toStartOf="@id/order_completed_store_name_tv"/>

    <Button
        android:id="@+id/order_completed_order_detail_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="주문 상세"
        android:background="@drawable/bottom_btn"
        android:textColor="@color/dark_grey"
        app:layout_constraintEnd_toStartOf="@id/order_completed_order_delete_btn"
        app:layout_constraintTop_toBottomOf="@id/order_completed_store_address_tv"/>

    <Button
        android:id="@+id/order_completed_order_delete_btn"
        android:background="@drawable/bottom_btn"
        android:backgroundTint="@color/white_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="주문 취소"
        android:textColor="@color/red"
        app:layout_constraintEnd_toEndOf="@id/order_completed_line_01_view"
        app:layout_constraintTop_toBottomOf="@id/order_completed_store_address_tv"/>

    <View
        android:id="@+id/order_completed_line_02_view"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/grey"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/order_completed_order_delete_btn" />

    <TextView
        android:id="@+id/order_completed_notice_01_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="개인용기를 지참하여 "
        android:textColor="@color/grey"
        android:textSize="18sp"
        android:layout_marginEnd="5dp"
        app:layout_constraintTop_toBottomOf="@id/order_completed_line_02_view"
        app:layout_constraintStart_toStartOf="@id/order_completed_line_02_view"
        app:layout_constraintEnd_toEndOf="@id/order_completed_notice_02_tv"/>

    <TextView
        android:id="@+id/order_completed_notice_02_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" 에 방문해주세요!"
        android:textColor="@color/grey"
        android:textSize="18sp"
        android:layout_marginStart="5dp"
        app:layout_constraintTop_toBottomOf="@id/order_completed_notice_01_tv"
        app:layout_constraintStart_toStartOf="@id/order_completed_notice_01_tv"
        app:layout_constraintEnd_toEndOf="@id/order_completed_line_02_view"/>

    <TextView
        android:id="@+id/order_completed_notice_time_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="오후 12:30"
        android:textColor="@color/dark_grey"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@id/order_completed_notice_02_tv"
        app:layout_constraintBottom_toBottomOf="@id/order_completed_notice_02_tv"
        app:layout_constraintEnd_toStartOf="@id/order_completed_notice_02_tv" />
</androidx.constraintlayout.widget.ConstraintLayout>